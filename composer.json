{
    "name": "jakub-the-developer/php-card-game",
    "description": "PHP 8 Card Game with example console UI.",
    "license": "MIT",
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit tests --bootstrap vendor/autoload.php --coverage-html coverage",
        "phpstan": "vendor/bin/phpstan analyse src tests --level=9"
    },
    "autoload": {
        "psr-4": {"PhpCardGame\\": "src"}
    },
    "require": {
        "php": ">=8.1",
        "symfony/console": "^6.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "phpstan/phpstan": "^1.3",
        "jetbrains/phpstorm-attributes": "^1.0"
    }
}
